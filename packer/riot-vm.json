{
  "variables": {
    "vm_version": "0.1.0",
    "vm_name": "riot-vm"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'user' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/riot.sh",
            "scripts/virtualbox.sh",
            "scripts/cleanup.sh"
          ]
        }
      }
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=riot-vm<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 10240,
      "guest_os_type": "Ubuntu_64",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [
        "iso/ubuntu-18.04.2-server-amd64.iso",
        "http://cdimage.ubuntu.com/ubuntu/releases/bionic/release/ubuntu-18.04.2-server-amd64.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "a2cb36dc010d98ad9253ea5ad5a07fd6b409e3412c48f1860536970b073c98f5",
      "ssh_username": "user",
      "ssh_password": "user",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'user'|sudo -S shutdown -P now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "RIOT-VM",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "32"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--clipboard",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--draganddrop",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--usb",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--accelerate3d",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--iconfile",
          "riot-os.png"
        ],
        [
          "usbfilter", "add", "0", "--target", "{{.Name}}",
          "--name", "ST-Link",
          "--vendorid", "0483", "--productid", "374b"
        ],
        [
          "usbfilter", "add", "0", "--target", "{{.Name}}",
          "--name", "CMSIS-DAP",
          "--vendorid", "03eb", "--productid", "2111"
        ],
        [
          "usbfilter", "add", "0", "--target", "{{.Name}}",
          "--name", "JLink",
          "--vendorid", "1366", "--productid", "1015"
        ],
        [
          "usbfilter", "add", "0", "--target", "{{.Name}}",
          "--name", "Arduino Zero",
          "--vendorid", "03eb", "--productid", "2157"
        ],
        [
          "usbfilter", "add", "0", "--target", "{{.Name}}",
          "--name", "DAPLink",
          "--vendorid", "0d28", "--productid", "0204"
        ],
        [
          "usbfilter", "add", "0", "--target", "{{.Name}}",
          "--name", "IoT-LAB M3",
          "--vendorid", "0403", "--productid", "6010"
        ],
        [
          "usbfilter", "add", "0", "--target", "{{.Name}}",
          "--name", "IoT-LAB M3",
          "--vendorid", "0403", "--productid", "6011"
        ]
      ],
      "export_opts":
        [
          "--manifest",
          "--vsys", "0",
          "--description", "RIOT VM",
          "--version", "1.0"
        ],
      "format": "ova"
    }
  ],
  "post-processors": [
    [
      {
        "output": "builds/{{user `vm_name`}}-{{user `vm_version`}}.box",
        "type": "vagrant",
        "keep_input_artifact": true
      }
    ]
  ]
}
